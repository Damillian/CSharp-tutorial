<Window x:Class="WPF_01C.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_01C"
        mc:Ignorable="d"
        Title="My first GUI" Height="450" Width="800">
    <StackPanel>
        <TextBox Width="100" Margin="50" Text="{Binding ElementName=MySlider, Path=Value, Mode=OneWay}"></TextBox>
        <Slider Name="MySlider" Minimum="0" IsSnapToTickEnabled="True" TickFrequency="0.25"></Slider>
    </StackPanel>
</Window>
